{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": [
      "es2015",
      "dom"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": true,
    "declaration": true
  },
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "genDir": "aot-dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
